# Variables de entorno de referencia para Softmobile 2025 v2.2.0
# Completa los campos obligatorios antes de iniciar el backend.

# Minutos de vigencia para cada token de acceso.
# Alias admitidos: SOFTMOBILE_TOKEN_MINUTES
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ACCOUNT_LOCK_MINUTES
ACCOUNT_LOCK_MINUTES=15

# Variable detectada en backend/main.py
API_PORT=8000

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_BACKUP_DIR
BACKUP_DIR=./backups

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_BACKUP_INTERVAL_SECONDS
BACKUP_INTERVAL_SECONDS=43200

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ALLOWED_ORIGINS
# Obligatoria
CORS_ORIGINS=http://localhost:8000,http://localhost:5173

# Cadena de conexión proporcionada por el entorno.
# Alias admitidos: SOFTMOBILE_DATABASE_URL, softmobile_database_url
DATABASE_URL=sqlite:///softmobile.db

# Variable detectada en backend/main.py
DB_PATH=database/softmobile.db

# Variable detectada en backend/main.py
DEBUG=true

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ENABLE_2FA
ENABLE_2FA=false

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ENABLE_ANALYTICS_ADV
ENABLE_ANALYTICS_ADV=true

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ENABLE_SCHEDULER
ENABLE_BACKGROUND_SCHEDULER=true

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ENABLE_BACKUP_SCHEDULER
ENABLE_BACKUP_SCHEDULER=true

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ENABLE_CATALOG_PRO
ENABLE_CATALOG_PRO=true

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ENABLE_HYBRID_PREP
ENABLE_HYBRID_PREP=true

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ENABLE_PURCHASES_SALES
ENABLE_PURCHASES_SALES=true

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ENABLE_TRANSFERS
ENABLE_TRANSFERS=true

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_ADJUSTMENT_VARIANCE_THRESHOLD
INVENTORY_ADJUSTMENT_VARIANCE_THRESHOLD=3

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_LOW_STOCK_THRESHOLD
INVENTORY_LOW_STOCK_THRESHOLD=5

# Clave usada para firmar y verificar los tokens JWT.
# Alias admitidos: SECRET_KEY, SOFTMOBILE_SECRET_KEY
# Obligatoria
JWT_SECRET_KEY=cambia-esta-clave

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_MAX_FAILED_LOGIN_ATTEMPTS
MAX_FAILED_LOGIN_ATTEMPTS=5

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_PASSWORD_RESET_MINUTES
PASSWORD_RESET_TOKEN_MINUTES=30

# Días de vigencia para cada token de refresco.
REFRESH_TOKEN_EXPIRE_DAYS=7

# Variable detectada en backend/main.py
SECRET_KEY=

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_SESSION_COOKIE_MINUTES
SESSION_COOKIE_EXPIRE_MINUTES=480

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_SESSION_COOKIE_NAME
SESSION_COOKIE_NAME=softmobile_session

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_SESSION_COOKIE_SAMESITE
SESSION_COOKIE_SAMESITE=lax

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_SESSION_COOKIE_SECURE
SESSION_COOKIE_SECURE=false

# Correo electrónico remitente por defecto para notificaciones.
SMTP_FROM=

# Servidor SMTP utilizado para notificaciones por correo.
SMTP_HOST=

# Contraseña del usuario SMTP configurado.
SMTP_PASS=

# Puerto del servidor SMTP.
SMTP_PORT=

# Usuario para autenticarse en el servidor SMTP.
SMTP_USER=

# Variable detectada en backend/app/core/config.py
SOFTMOBILE_API_V1_STR=/api/v1

# Token maestro opcional que habilita el bootstrap inicial cuando aún no existen usuarios registrados.
# Alias admitidos: BOOTSTRAP_TOKEN
SOFTMOBILE_BOOTSTRAP_TOKEN=

# Variable detectada en backend/app/core/config.py
SOFTMOBILE_PROJECT_NAME=Softmobile Inventory API

# Archivo SQLite local
SOFTMOBILE_SQLITE_DB_FILE=softmobile.db

# Variable detectada en backend/app/config.py
# Alias admitidos: TESTING_MODE
SOFTMOBILE_TEST_MODE=false

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_SYNC_INTERVAL_SECONDS
SYNC_INTERVAL_SECONDS=1800

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_SYNC_MAX_ATTEMPTS
SYNC_MAX_ATTEMPTS=5

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_SYNC_RETRY_INTERVAL_SECONDS
SYNC_RETRY_INTERVAL_SECONDS=600

# Variable detectada en backend/app/config.py
TITLE=Softmobile Central

# Variable detectada en backend/app/config.py
# Alias admitidos: SOFTMOBILE_UPDATE_FEED_PATH
UPDATE_FEED_PATH=./docs/releases.json

# Variable detectada en backend/app/config.py
VERSION=2.2.0
