{
  "info": {
    "name": "Softmobile POS Cierre Diario",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Cierre Diario JSON",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"},
          {"key": "X-Reason", "value": "pos-close"}
        ],
        "url": {
          "raw": "{{api}}/reports/sales/daily?store_id={{store_id}}&date={{date}}",
          "host": ["{{api}}"],
          "path": ["reports", "sales", "daily"],
          "query": [
            {"key": "store_id", "value": "{{store_id}}"},
            {"key": "date", "value": "{{date}}"}
          ]
        }
      },
      "response": []
    },
    {
      "name": "Cierre Diario CSV",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"},
          {"key": "X-Reason", "value": "pos-close"}
        ],
        "url": {
          "raw": "{{api}}/reports/sales/daily/export.csv?store_id={{store_id}}&date={{date}}",
          "host": ["{{api}}"],
          "path": ["reports", "sales", "daily", "export.csv"],
          "query": [
            {"key": "store_id", "value": "{{store_id}}"},
            {"key": "date", "value": "{{date}}"}
          ]
        }
      },
      "response": []
    }
  ]
}